<section class="flex flex-col mt-6 px-8">
  <div class="flex flex-col items-start mb-4">
    <div class="inline-block mr-24">
      <h2 class="text-2xl text-gray-700 font-medium m-2"><%= title %></h2>
      <hr class="h-1 bg-primary border-0 rounded-sm my-2 mx-4">
    </div>
  </div>
  <% if resources.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% resources.each do |resource| %>
        <%= render "resources/resource_card", resource: resource.decorate %>
      <% end %>
    </div>
    <div class="text-right text-end mt-4">
      <%= link_to "View all", resources_path, class: "btn btn-secondary-outline" %>
    </div>
  <% else %>
    <p class="py-7 text-center">
      <%= "There are no popular resources at this time." %>
    </p>
  <% end %>
</section>
