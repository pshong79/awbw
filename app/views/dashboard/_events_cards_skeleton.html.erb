<div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
  <% 3.times do %>
    <div
      class="
        relative bg-white border border-gray-200 rounded-2xl shadow-sm
        p-4 flex flex-col gap-4 animate-pulse
      "
    >
      <!-- Bookmark -->
      <div class="absolute top-3 right-3">
        <div class="w-5 h-5 bg-gray-200 rounded"></div>
      </div>

      <!-- Thumbnail + Title -->
      <div class="flex flex-col md:flex-row gap-2">
        <!-- Thumbnail -->
        <div class="w-32 h-24 bg-gray-200 rounded-lg border border-gray-300"></div>

        <!-- Title -->
        <div class="flex-1 min-w-0 pr-1 mr-4 mt-1">
          <div class="h-5 w-3/4 bg-gray-200 rounded"></div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-6 text-right">
  <%= link_to "View all events",
                events_path,
                class: "text-primary font-medium hover:underline" %>
</div>
