            <%= link_to("Edit", edit_workshop_idea_path(@workshop_idea), class: "btn btn-primary-outline") %>
          <% end %>
        </div>
      </div>

      <div class="space-y-6">
        <div class="mt-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-3">

                          <div class="mb-3">
                <p class="font-bold text-gray-700">Title:</p>
                <p class="text-gray-900"><%= @workshop_idea.title %></p>
              </div>
                          <div class="mb-3">
                <p class="font-bold text-gray-700">Description:</p>
                <p class="text-gray-900"><%= @workshop_idea.description %></p>
              </div>
                          <div class="mb-3">
                <p class="font-bold text-gray-700">Staff notes:</p>
                <p class="text-gray-900"><%= @workshop_idea.staff_notes %></p>
              </div>
                          <div class="mb-3">
                <p class="font-bold text-gray-700">Created by:</p>
                <p class="text-gray-900"><%= @workshop_idea.created_by %></p>
              </div>
                          <div class="mb-3">
                <p class="font-bold text-gray-700">Windows type:</p>
                <p class="text-gray-900"><%= @workshop_idea.windows_type_id %></p>
              </div>
                          <div class="mb-3">
                <p class="font-bold text-gray-700">Tips:</p>
                <p class="text-gray-900"><%= @workshop_idea.tips %></p>
              </div>
                          <div class="mb-3">
                <p class="font-bold text-gray-700">Objective:</p>
                <p class="text-gray-900"><%= @workshop_idea.objective %></p>
