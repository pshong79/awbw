                <p class="font-bold text-gray-700">Visualization:</p>
                <p class="text-gray-900"><%= @workshop_idea.visualization %></p>
              </div>
                          <div class="mb-3">
                <p class="font-bold text-gray-700">Warm up:</p>
                <p class="text-gray-900"><%= @workshop_idea.warm_up %></p>
              </div>
                          <div class="mb-3">
                <p class="font-bold text-gray-700">Opening circle:</p>
