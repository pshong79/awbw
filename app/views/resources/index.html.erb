<div class="bg-violet-50 border border-gray-200 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-200 p-6">
  <!-- Header Row -->
  <div class="w-full">
    <div class="flex items-start justify-between mb-6">
      <div class="pr-6">
        <h2 class="text-2xl font-semibold mb-2">Resources (<%= @resources_count %>)</h2>
      </div>
      <div class="text-right text-end">
        <% if current_user.super_user? %>
          <%= link_to "New Resource",
                      new_resource_path,
                      class: "admin-only bg-blue-100 btn btn-primary-outline" %>
        <% end %>
      </div>
    </div>

    <!-- Search Form -->
    <div class="w-full">
      <%= render "search_boxes" %>

    </div>

    <!-- Divider -->
    <div class="w-full mt-6">
      <hr class="border-gray-300 mb-6">
    </div>

    <!-- Results Table -->
    <% if @resources.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @resources.each do |resource| %>
          <%= render "resource_card", resource: resource.decorate %>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-6">There are no resources that match your search. Please try again.</p>
    <% end %>


    <!-- Pagination -->
    <div class="pagination flex justify-center mt-6 w-full">
      <%= tailwind_paginate @resources %>
    </div>
  </div>
</div>



<script>
  $('#submit-div').click(function() {
   $('form').submit();
  });
</script>

