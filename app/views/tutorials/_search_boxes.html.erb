<!-- Filters -->
<div class="mb-6 p-4 bg-white border border-gray-200 rounded-lg">
  <%= form_with url: tutorials_path,
                method: :get,
                local: true,
                class: "grid grid-cols-1 md:grid-cols-3 gap-4 items-end" do |f| %>

    <div>
      <%= f.label :search, "Title or body contains",
                  class: "block text-sm font-medium text-gray-700" %>

      <%= f.text_field :search,
                       value: params[:search],
                       placeholder: "e.g. Profile, Workshop searchâ€¦",
                       class: "mt-1 block w-full rounded-md border border-gray-300 p-2",
                       oninput: "this.form.requestSubmit()" %>
    </div>

    <% if current_user.super_user? %>
      <div class="admin-only bg-blue-100">
        <%= f.label :published_search, "Published",
                    class: "block text-sm font-medium text-gray-700" %>

        <%= f.select :published_search,
                     options_for_select([["All", ""], ["Published", "true"], ["Hidden", "false"]], params[:published_search]),
                     {},
                     class: "mt-1 block w-full rounded-md border border-gray-300 p-2",
                     onchange: "this.form.requestSubmit()" %>
      </div>
    <% end %>

    <!-- Clear -->
    <div>
      <%= link_to "Clear",
                  tutorials_path,
                  class: "btn btn-utility-outline whitespace-nowrap" %>
    </div>

  <% end %>
</div>
