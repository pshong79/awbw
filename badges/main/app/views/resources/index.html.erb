<div class="<%= DomainTheme.bg_class_for(:resources) %> border border-gray-200 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-200 p-6">
  <!-- Header Row -->
  <div class="w-full">
    <div class="flex items-start justify-between mb-6">
      <div class="pr-6">
        <h2 class="text-2xl font-semibold mb-2">Resources</h2>
      </div>

      <div class="text-right text-end">
        <% if allowed_to?(:new?, Resource) %>
          <%= link_to "New Resource",
                      new_resource_path,
                      class: "admin-only bg-blue-100 btn btn-primary-outline" %>
        <% end %>
      </div>
    </div>

    <!-- Search Form -->
    <div class="w-full"><%= render "search_boxes" %></div>

    <!-- Divider -->
    <div class="w-full mt-6"><hr class="border-gray-300 mb-6"></div>

    <!-- Results Table -->
    <% result_src = resources_path + "?" + request.query_string %>

    <%= turbo_frame_tag :resource_results, src: result_src do %>
      <div class="min-h-screen">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 animate-pulse">
          <% 9.times do %>
            <div class="relative">
              <div class="flex flex-row flex-wrap bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
                <!-- LEFT SIDE -->
                <div
                  class="
                    flex-shrink-0
                    w-40
                    flex flex-col items-center justify-center
                    py-4 px-3
                    border-b md:border-b-0 md:border-r border-gray-200
                  "
                >
                  <!-- Asset placeholder -->
                  <div class="w-32 h-32 bg-gray-200 rounded-lg"></div>

                  <!-- Type -->
                  <div class="mt-3 h-3 w-16 bg-gray-200 rounded"></div>
                </div>

                <!-- RIGHT SIDE -->
                <div class="flex-1 min-w-0 pl-4 pr-6 pb-12 mt-2 relative">
                  <!-- Title lines -->
                  <div class="mt-3 space-y-2">
                    <div class="h-5 w-3/4 bg-gray-200 rounded"></div>
                    <div class="h-5 w-1/2 bg-gray-200 rounded"></div>
                  </div>

                  <!-- Action buttons -->
                  <div class="absolute bottom-3 right-3 flex space-x-2">
                    <div class="h-8 w-8 bg-gray-200 rounded-md"></div>
                    <div class="h-8 w-8 bg-gray-200 rounded-md"></div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination skeleton -->
        <div class="flex justify-center mt-8 space-x-2 animate-pulse">
          <div class="h-8 w-10 bg-gray-200 rounded"></div>

          <div class="h-8 w-10 bg-gray-200 rounded"></div>

          <div class="h-8 w-10 bg-gray-200 rounded"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
