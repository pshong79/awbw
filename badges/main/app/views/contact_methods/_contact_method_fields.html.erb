<%= f.hidden_field :kind, value: :phone %>

<div class="nested-fields rounded-lg bg-gray-50 border-gray-200 p-6">
  <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-6">
    <!-- Contact Type -->
    <div>
      <%= f.input :contact_type,
                  as: :select,
                  required: true,
                  wrapper: false,
                  label: "Contact type",
                  collection: ContactMethod::CONTACT_TYPES.compact.map { |t| [t.humanize, t] } %>
    </div>

    <!-- Value -->
    <div>
      <%= f.input :value,
                  wrapper: false,
                  label: "Value",
                  input_html: {
                    class: "rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500"
                  } %>
    </div>

    <!-- Primary -->
    <div class="flex items-center h-[42px]">
      <%= f.input :is_primary,
                  as: :boolean,
                  wrapper: false,
                  label: false,
                  input_html: { class: "mr-2 text-blue-600 focus:ring-blue-500" } %>
    </div>

    <!-- Inactive -->
    <div class="flex items-center h-[42px]">
      <%= f.input :inactive,
                  as: :boolean,
                  wrapper: false,
                  label: false,
                  input_html: { class: "mr-2 text-blue-600 focus:ring-blue-500" } %>
    </div>

    <div class="text-right text-end">
      <!-- Remove button -->
      <%= link_to_remove_association "âœ– Delete phone",
                                     f,
                                     class: "btn btn-danger-outline whitespace-nowrap" if f.object.persisted? %>
    </div>
  </div>
</div>
