  <style>
      body {
          margin: 0;
          padding: 0;
          background-color: #f3f4f6;
          font-family: Arial, Helvetica, sans-serif;
          color: #333;
      }

      h1 { font-size: 22px; margin-bottom: 12px; }
      p  { font-size: 14px; line-height: 1.5; margin: 8px 0; }
  </style>
</head>

<body>
<table width="100%" cellpadding="0" cellspacing="0" bgcolor="#f3f4f6">
  <tr>
    <td align="center" style="padding: 32px 16px;">
      <%= render "layouts/mailer/logo" %>
      <%= render "layouts/mailer/card_body" %>
      <%= render "layouts/mailer/social_icons" %>
      <%= render "layouts/mailer/footer" %>
      <%= render "layouts/mailer/fallback_url" %>
    </td>
  </tr>
</table>
</body>
</html>
