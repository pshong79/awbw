<% title ||= "Upcoming Events" %>

<section class="py-10 <%= DomainTheme.bg_class_for(:events) %>">
  <div class="max-w-6xl mx-auto px-4">
    <%= render "dashboard/dashboard_section_header",
               title: title,
               subtitle: "Workshops, trainings, and upcoming gatherings" %>

    <% if events.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <% events.first(4).each do |event| %>
          <%= render "events/card", event: event %>
        <% end %>
      </div>

      <div class="mt-6 text-right">
        <%= link_to "View all events",
                    events_path,
                    class: "text-primary font-medium hover:underline" %>
      </div>
    <% else %>
      <p class="text-gray-500">No events at this time.</p>
    <% end %>
  </div>
</section>
