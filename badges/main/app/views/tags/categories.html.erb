<%= turbo_frame_tag :categories_tags do %>
  <div class="space-y-8">
    <% @categories_by_type.each do |type, categories| %>
      <div>
        <div class="text-sm font-semibold text-stone-800 mb-3 uppercase tracking-wide"><%= type.titleize %></div>

        <div class="flex flex-wrap gap-2">
          <% categories.each do |category| %>
            <%= render "categories/tagging_label",
                     category: category,
                     name_only: true,
                     bg_color: "bg-white",
                     bg_hover_color: "bg-lime-200" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
