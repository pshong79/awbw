<div class="w-full aspect-[3/2] sm:aspect-[21/9] lg:aspect-[24/9] overflow-hidden rounded-xl print:hidden">
  <!-- Background image -->
  <%= render "assets/display_image",
             resource: workshop,
             width: "full", height: "x",
             link: false,
             link_to_object: false,
             file: workshop.display_image %>

  <!-- Title + meta -->
</div>

<div class="px-8 py-4 my-2 border-md bg-primary rounded-xl">
  <h1 class="text-3xl md:text-4xl font-bold text-white">
    <%= workshop.title %>

    <% if workshop.inactive %>
      <span class="text-red-300 text-lg">(Hidden)</span>
    <% end %>
  </h1>

  <div class="flex flex-wrap gap-4 text-sm text-gray-200 mt-3">
    <span>Author: <%= workshop.author %></span>
    <span>Category: <%= workshop.windows_type&.short_name %></span>
    <span>Added: <%= workshop.date %></span>
  </div>
</div>
