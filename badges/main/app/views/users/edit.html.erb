<div class="min-h-screen py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto bg-white border border-gray-200 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center gap-3">
          <h1 class="text-2xl font-semibold text-gray-900">Edit <%= @user.class.model_name.human %></h1>
          <%= render "lock_status_indicator", user: @user %>
        </div>
        <div class="flex space-x-2">
          <% if current_user == @user %>
            <%= link_to "Change password",
                        change_password_path,
                        class: "btn btn-secondary-outline" %>
          <% end %>
          <%= link_to "Facilitator",
                      facilitator_path(@user.facilitator),
                      class: "btn btn-secondary-outline" if @user.facilitator %>
          <%= link_to "View",
                      user_path(@user),
                      class: "btn btn-secondary-outline" %>
        </div>
      </div>

      <div class="border-b border-gray-300 mb-6"></div>

      <div class="space-y-6">
        <div class="mt-4">
          <%= render "form", user: @user %>
        </div>
      </div>
    </div>
  </div>
</div>
