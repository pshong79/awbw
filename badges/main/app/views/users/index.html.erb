<div class="min-h-screen py-8">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="admin-only bg-blue-100 rounded p-6">
      <div class="max-w-7xl mx-auto bg-white border border-gray-200 rounded-xl shadow-lg hover:shadow-xl
        transition-shadow duration-200 p-6">
      <div class="space-y-6">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
          <h1 class="text-2xl font-semibold text-gray-900">
            <%= User.model_name.human.pluralize %> (<%= @users_count %>)
          </h1>
          <div class="flex gap-2">
            <% if current_user.super_user? %>
              <%= link_to "New #{User.model_name.human.downcase}",
                          new_user_path,
                          class: "admin-only bg-blue-100 btn btn-primary-outline" %>
            <% end %>
          </div>
        </div>

        <!-- Filter form -->
        <%= render "search_boxes" %>

        <div class="overflow-x-auto">
          <table class="w-full border-collapse border border-gray-200">
            <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700 w-1/6">Name</th>
              <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700 w-1/3">Email</th>
              <th class="px-4 py-2 text-center text-sm font-semibold text-gray-700 w-[60px]">No access?</th>
              <th class="px-4 py-2 text-center text-sm font-semibold text-gray-700 w-[60px]">Super User</th>
              <th class="px-4 py-2 text-center text-sm font-semibold text-gray-700 w-[80px]">Actions</th>
            </tr>
            </thead>

            <tbody class="divide-y divide-gray-200">
            <% @users.each do |user| %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <!-- Avatar -->
                <td class="px-4 py-2 text-left">
                  <% if user.facilitator %>
                    <%= facilitator_profile_button(user.facilitator) %>
                  <% else %>
                    <%= link_to "Create facilitator",
                                new_facilitator_path(user_id: user.id),
                                class: "btn btn-secondary-outline" %>
                  <% end %>
                </td>

                <!-- Email -->
                <td class="px-4 py-2 text-sm text-gray-800 break-words"><%= user.email %></td>

                <!-- Inactive -->
                <td class="px-4 py-2 text-center">
                  <% if user.inactive? %>
                    <span class="fa fa-ban text-red-500"></span>
                  <% else %>
                    <span>--</span>
                  <% end %>
                </td>

                <!-- Super User -->
                <td class="px-4 py-2 text-center">
                  <% if user.super_user? %>
                    <span class="fa fa-check-circle text-green-500"></span>
                  <% else %>
                    <span>--</span>
                  <% end %>
                </td>

                <!-- Actions -->
                <td class="px-4 py-2 flex justify-center gap-2">
                  <%= link_to 'Edit', edit_user_path(user), class: "btn btn-secondary-outline" %>
                  <%= link_to 'Stats', user_path(user), class: "btn btn-secondary-outline" %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

        <!-- Empty state -->
        <% unless @users.any? %>
          <p class="text-gray-500 text-center py-6">
            No <%= User.model_name.human.pluralize %> found.
          </p>
        <% end %>

        <!-- Pagination -->
        <div class="mt-6 flex justify-center">
          <div class="pagination">
            <%= tailwind_paginate @users %>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
