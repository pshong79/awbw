<div class="community-news-index max-w-7xl mx-auto <%= DomainTheme.bg_class_for(:community_news) %> border border-gray-200 rounded-xl shadow p-6">
  <div class="w-full">
    <div class="flex items-start justify-between mb-6">
      <div class="pr-6">
        <h2 class="text-2xl font-semibold mb-2">Community news</h2>
      </div>

      <div class="text-right text-end">
        <% if current_user.super_user? %>
          <%= link_to "New Post",
                      new_community_news_path,
                      class: "admin-only bg-blue-100 btn btn-primary-outline" %>
        <% end %>
      </div>
    </div>

    <%= render "search_boxes" %>

    <%= render "community_news_count" %>

    <% result_src = community_news_index_path + "?" + request.query_string %>

    <%= turbo_frame_tag "community_news_results", src: result_src do %>
      <%= render "results_skeleton" %>
    <% end %>
  </div>
</div>
