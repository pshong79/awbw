<div class="min-h-screen py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div
      class="
        max-w-5xl mx-auto bg-white border border-gray-200 rounded-xl shadow-lg hover:shadow-xl transition-shadow
        duration-200 p-6
      "
    >
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-semibold text-gray-900">Edit <%= @community_news.class.model_name.human %></h1>

        <%= link_to "View", community_news_path(@community_news),
                            class: "btn btn-secondary-outline" %>
      </div>

      <div class="space-y-6">
        <div class="mt-4"><%= render "form", community_news: @community_news %></div>

        <%= turbo_frame_tag "editor_assets_lazy", src: edit_community_news_path(@community_news) do %>
          <%= render "shared/loading" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
