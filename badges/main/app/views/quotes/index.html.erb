<div class="min-h-screen py-8">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto <%= DomainTheme.bg_class_for(:quotes) %> border border-gray-200 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-200 p-6">
      <div class="space-y-6">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
          <h1 class="text-2xl font-semibold text-gray-900">
            <%= Quote.model_name.human.pluralize %> (<%= @quotes_count %>)
          </h1>
          <div class="flex gap-2">
            <%= link_to("New #{Quote.model_name.human}",
                                new_quote_path,
                                class: "btn btn-primary-outline") %>
          </div>
        </div>

        <div class="rounded-xl bg-white p-6">
          <div class="overflow-x-auto">
          <table class="w-full border-collapse border border-gray-200">
            <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Content</th>
              <th class="px-4 py-2 text-center text-sm font-semibold text-gray-700 w-[2%]">Actions</th>
            </tr>
            </thead>

            <tbody class="divide-y divide-gray-200">
            <% @quotes.decorate.each do |quote| %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-4 py-2 text-sm text-gray-800">
                  <div class="mb-1">
                    <% if current_user.super_user? && quote.inactive? && controller_name != "dashboard" %>
                      <span
                        class="inline-flex items-center px-2 py-0.5 rounded-full
                               text-xs font-medium bg-blue-100 text-gray-600 whitespace-nowrap">
                        <i class="fa-solid fa-eye-slash mr-1"></i>
                        Hidden
                      </span>

                    <% end %>

                    <!-- Featured badge -->
                    <%# if true || (quote.featured? && controller_name != "dashboard") %>
<!--                      <span-->
<!--                        class="inline-flex items-center px-2 py-0.5 rounded-full-->
<!--                               text-xs font-medium bg-yellow-100 text-yellow-800 whitespace-nowrap">-->
<!--                        ðŸŒŸ Dashboard feature -->
<!--                      </span>-->
                    <%# end %>
                  </div>
                  <div class="font-semibold text-lg text-gray-700">
                    <%= link_to h(quote.detail), quote_path(quote.object), class: "hover:underline" %>
                  </div>
                  <div class="italic text-gray-700 mt-1">
                    <%= "-- " %>
                    <%= quote.attribution %>
                    <%= "@ " + quote.created_at.strftime("%m-%d-%-Y") %>
                    <%= ("re " + link_to(quote.workshop.title, workshop_path(quote.workshop),
                                         class: "hover:underline") if quote.workshop).to_s.html_safe %>
                    <% quote.quotable_item_quotes.each do |qiq| %>
                      <% if qiq.quotable %>
                        from: <%= link_to qiq.quotable.title,
                                    polymorphic_path(qiq.quotable),
                                    class: "hover:underline" %>
                      <% end %>
                    <% end %>
                  </div>
                </td>
                <td class="px-4 py-2 text-center whitespace-nowrap">
                  <div class="inline-flex justify-center">
                    <%= link_to "Edit", edit_quote_path(quote.object), class: "btn btn-secondary-outline" %>
                  </div>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        </div>

        <!-- Empty state -->
        <% unless @quotes.any? %>
          <p class="text-gray-500 text-center py-6">
            No <%= Quote.model_name.human.pluralize %> found.
          </p>
        <% end %>

        <!-- Pagination -->
        <div class="mt-6 flex justify-center">
          <div class="pagination mt-6">
            <%= tailwind_paginate @quotes %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
