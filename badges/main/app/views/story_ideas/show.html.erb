<div class="max-w-3xl mx-auto px-6 py-10 text-gray-800">
  <!-- Title -->
  <h1 class="text-3xl sm:text-4xl font-bold leading-tight mb-2 text-gray-900 mt-6">
    Story Idea: <%= @story_idea.title %>
  </h1>

  <!-- Organization and Workshop (muted gray, smaller) -->
  <div class="text-sm text-gray-600 mb-8">
    <p>
      <strong>Author:</strong>
      <%= @story_idea.author_credit %>
    </p>
    <p>
      <strong>Organization Name:</strong>
      <%= @story_idea.organization_description %>
    </p>
    <p>
      <strong>Workshop:</strong>
      <%= @story_idea.workshop&.title || @story_idea.external_workshop_title %>
    </p>
  </div>

  <%= render "assets/display_assets", resource: @story_idea %>

  <!-- Story Body -->
  <div class="prose prose-lg max-w-none text-gray-700 mb-10">
    <%= simple_format(@story_idea.body) %>
  </div>
</div>
