<% profile_url = @facilitator ? facilitator_url(@facilitator) : user_url(@user) %>

<p style="margin-bottom: 6px;">
  <%= @notification_type %>
</p>

<h1 style="margin: 0;">
  <strong><%= @user.full_name %></strong>
</h1>

<p style="margin: 4px 0 16px; font-size: 13px; color: #6b7280;">
  Requested on
  <%= Time.current
          .in_time_zone("Pacific Time (US & Canada)")
          .strftime("%B %-d, %Y at %-l:%M %p %Z") %>
</p>

<hr style="margin: 24px 0;">

<div style="text-align: left;">

  <p style="margin-bottom: 16px;">
    <%= link_to @user.full_name, profile_url %>
    (<%= mail_to @user.email %>)
    requested a password reset.
  </p>

  <% if @facilitator&.avatar&.file&.attached? %>
    <h2 style="margin-bottom: 8px; text-align: left;">
      Avatar
    </h2>

    <p style="margin: 0;">
      <%= image_tag url_for(@facilitator.avatar.file),
                    width: 96,
                    height: 96,
                    style: "border-radius: 50%; display: block;" %>
    </p>
  <% end %>
</div>

<hr style="margin: 24px 0;">

<p>
  <a href="<%= notifications_url %>"
     style="display:inline-block;background:#e5e7eb;color:#111827;
       text-decoration:none;padding:10px 16px;border-radius:6px;
       font-weight:bold;">
    View notifications
  </a>

  <a href="<%= profile_url %>"
     style="display:inline-block;background:#e5e7eb;color:#111827;
       text-decoration:none;padding:10px 16px;border-radius:6px;
       font-weight:bold;">
    View profile
  </a>
</p>
