<%= turbo_frame_tag "type_selector_asset_#{ asset.id }" do %>
  <%= turbo_flash %>

  <%= form_with scope: :library_asset, url: library_asset_path(asset), method: :patch, html: { autocomplete: "off" } do |f| %>
    <% if owner&.respond_to?(:to_sgid) %>
      <%= hidden_field_tag :owner_sgid, owner.to_sgid.to_s, autocomplete: "off" %>
    <% end %>

    <div class="relative m-2">
      <%= f.select :type,
        Asset.allowed_types_for_owner(owner).map { |t| [t.underscore.humanize, t] },
        { required: true, selected: asset.type },
        { class: "block w-full appearance-none rounded-md border border-gray-300
                  bg-white px-3 py-2 pr-8 text-sm text-gray-700 shadow-sm
                  focus:border-indigo-500 focus:outline-none focus:ring focus:ring-indigo-500 focus:ring-opacity-50",
          autocomplete: "off",
          disabled: owner.is_a?(Data),
          onchange: "this.form.requestSubmit();" } %>

      <% unless owner.is_a?(Data) %>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400">
          <i class="fa-solid fa-chevron-down text-sm"></i>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
